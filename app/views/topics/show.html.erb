<h1><%= @topic.name %> </h1>

<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <% @topic.sponsored_posts.each do |sp| %>
      <div class="media">
        <div class="media-body">
          <h2 class="media-heading">
            <%= link_to sp.title, topic_sponsored_post_path(@topic, sp), id: "ghermez" %>
          </h2>

        </div>

      </div>
    <% end %>

    <% @topic.posts.each do |p| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to p.title, topic_post_path(@topic, p) %>
          </h4>

          <small>
            submitted <%= time_ago_in_words(p.created_at) %> ago <br>
            <%= p.comments.count %> Comments
          </small>

        </div>

      </div>
    <% end %>

  </div>
  <div class="col-md-4">
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <%= link_to "New Sponsored Post", new_topic_sponsored_post_path(@topic), class: 'btn btn-success' %>
  </div>

</div>
